<?xml version="1.0" encoding="utf-8"?>
<me.himanshusoni.chatmessageview.ChatMessageView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:maxWidth="200dp"

    android:clickable="true"
    app:cmv_arrowGravity="center"
    app:cmv_arrowMargin="8dp"
    app:cmv_arrowPosition="left"
    app:cmv_backgroundColor="@color/primary"
    app:cmv_backgroundColorPressed="@color/primary_dark"
    app:cmv_contentPadding="6dp"
    app:cmv_cornerRadius="6dp"
    app:cmv_showArrow="true">

    <TextView
        android:id="@+id/messageTextView"
        style="@style/Base.TextAppearance.AppCompat.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoLink="all"
        android:background="@color/transparent"
        android:clickable="false"
        android:focusable="false"
        android:longClickable="false"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:text="Hello"
        android:textColor="#fff"
        android:textIsSelectable="false"
        android:textSize="17sp"
        android:textStyle="normal" />

</me.himanshusoni.chatmessageview.ChatMessageView>