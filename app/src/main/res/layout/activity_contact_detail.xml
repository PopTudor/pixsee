<RelativeLayout
    android:id="@+id/root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    android:fitsSystemWindows="true"
    tools:context=".ui.activity.ContactDetailActivity"
    tools:ignore="MergeRootFrame">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">


        <android.support.v7.widget.Toolbar
            android:id="@+id/detail_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:layout_collapseMode="pin"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>


    </android.support.design.widget.AppBarLayout>

    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/linearLayout"
        android:layout_below="@+id/app_bar"
        />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:id="@+id/imageButton" android:layout_gravity="center_vertical" android:src="@drawable/ic_attach_file_black_24dp"
            android:background="@color/transparent"/>
        <EditText
			android:id="@+id/messageEditText"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_marginLeft="5dp"
			android:layout_marginRight="5dp"
			android:layout_weight="10"
			android:background="#ffffff"
			android:focusable="true"
			android:focusableInTouchMode="true"
			android:hint="Say hi"
			android:inputType="textMultiLine"
			android:paddingLeft="10dp" android:capitalize="sentences">

            <requestFocus/>
        </EditText>

        <android.support.design.widget.FloatingActionButton
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_weight="0"

            android:onClick="sendMessage"
            android:scaleType="center"
            android:src="@drawable/ic_send_24dp"
            android:translationZ="0dp"
            app:elevation="0dp"
            app:fabSize="mini"
            />

        <!--<com.makeramen.roundedimageview.RoundedImageView-->
        <!--xmlns:app="http://schemas.android.com/apk/res-auto"-->
        <!--app:riv_oval="true"-->
        <!--app:riv_corner_radius="30dip"-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_height="match_parent"-->
        <!--android:id="@+id/imageButton"-->
        <!--android:src="@drawable/ic_action_content_send"-->
        <!--android:layout_weight="2"-->
        <!--android:background="@color/accent"-->
        <!--android:adjustViewBounds="false"-->
        <!--android:scaleType="center"/>-->

    </LinearLayout>


</RelativeLayout>
