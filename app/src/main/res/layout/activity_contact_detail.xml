<RelativeLayout
	android:id="@+id/root"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#EEEEEE"
	android:fitsSystemWindows="true"
	tools:context=".ui.activity.chat.ChatDetailActivity"
	tools:ignore="MergeRootFrame">

	<android.support.design.widget.AppBarLayout
		android:id="@+id/app_bar"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" app:elevation="1dp">

		<include layout="@layout/toolbar"/>

	</android.support.design.widget.AppBarLayout>

	<FrameLayout
		android:id="@+id/fragmentContainer"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_above="@+id/linearLayout"
		android:layout_below="@+id/app_bar"
	/>

	<LinearLayout
		android:id="@+id/linearLayout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_alignParentEnd="true"
		android:layout_alignParentLeft="true"
		android:layout_alignParentRight="true"
		android:layout_alignParentStart="true"
		android:layout_margin="5dp"
		android:orientation="horizontal">

		<ImageButton
			android:id="@+id/imageButton"
			android:layout_width="40dp"
			android:layout_height="40dp" android:layout_gravity="center_vertical" android:background="@color/transparent"
			android:onClick="sendPixsee" android:src="@drawable/ic_camera_24dp"/>
		<EditText android:id="@+id/messageEditText"
				  android:layout_width="match_parent"
				  android:layout_height="match_parent"
				  android:layout_weight="10"
				  android:capitalize="sentences"
				  android:focusable="true"
				  android:focusableInTouchMode="true"
				  android:hint="Say hi"
				  android:inputType="textCapSentences|textShortMessage|textMultiLine"
				  android:paddingLeft="10dp" android:background="@color/white" android:layout_marginRight="5dp"/>

		<android.support.design.widget.FloatingActionButton
			android:layout_width="48dp"
			android:layout_height="48dp"
			android:layout_weight="0"

			android:onClick="sendMessage"
			android:scaleType="center"
			android:src="@drawable/ic_send_24dp"
			android:translationZ="0dp"
			app:elevation="0dp"
			app:fabSize="mini"
		/>

		<!--<com.makeramen.roundedimageview.RoundedImageView-->
		<!--xmlns:app="http://schemas.android.com/apk/res-auto"-->
		<!--app:riv_oval="true"-->
		<!--app:riv_corner_radius="30dip"-->
		<!--android:layout_width="0dp"-->
		<!--android:layout_height="match_parent"-->
		<!--android:id="@+id/imageButton"-->
		<!--android:src="@drawable/ic_action_content_send"-->
		<!--android:layout_weight="2"-->
		<!--android:background="@color/accent"-->
		<!--android:adjustViewBounds="false"-->
		<!--android:scaleType="center"/>-->

	</LinearLayout>


</RelativeLayout>
