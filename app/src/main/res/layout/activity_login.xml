<RelativeLayout android:id="@+id/container"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryDark"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context="com.marked.pixienote.activities.LoginActivity">

    <TextView
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Welcome to Pixienote!"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textColor="#ffffff"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="119dp"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Write down the most important things for you"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textColor="#ffffff"
        android:layout_below="@+id/editText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/editText"
        android:layout_alignEnd="@+id/editText"
        android:gravity="center"/>

    <Button
        android:id="@+id/signInPixy"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:text="@string/sign_in_with_pixy"
        android:textColor="@android:color/background_dark"
        android:enabled="true"
        android:focusable="true"
        android:capitalize="words"
        android:layout_above="@+id/signInButtonGoogle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/google_plus_button"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/signInButtonGoogle"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/google_plus_button"
        android:capitalize="words"
        android:enabled="true"
        android:focusable="true"
        android:focusableInTouchMode="false"
        android:longClickable="false"
        android:text="@string/sign_in_with_google"
        android:textColor="@android:color/background_dark"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/emailEditText"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:hint="Email"
        android:inputType="textEmailAddress"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/passwordEditText"
        android:layout_below="@+id/emailEditText"
        android:layout_centerHorizontal="true"
        android:hint="Password"
        android:inputType="textPassword"/>

</RelativeLayout>
