<layout android:name="com.marked.vifo.fragments.ContactListFragment"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/tools"
        xmlns:fab="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="viewModel" type="com.marked.pixsee.friends.FriendViewModel"/>
    </data>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/friendsRecyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:clipToPadding="false"
            android:visibility="@{viewModel.recyclerViewVisibility}"

            tools:listitem="@layout/item_friend"/>
        <!--<com.github.clans.fab.FloatingActionMenu-->
        <!--android:id="@+id/fabMenu"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_gravity="end|bottom"-->
        <!--android:paddingBottom="20dp"-->
        <!--android:paddingRight="20dp"-->
        <!--android:paddingLeft="20dp"-->
        <!--android:paddingEnd="20dp"-->
        <!--fab:menu_colorNormal="@color/primary"-->
        <!--fab:menu_colorPressed="@color/primary_dark"-->
        <!--fab:menu_fab_label="Invite by email/message"-->
        <!--fab:menu_colorRipple="@color/primary_dark"-->
        <!--fab:menu_icon="@drawable/ic_group_add_24dp">-->
        <!--**************   BUTTONS   ****************-->
        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:onClick="@{viewModel.onClickFab}"
            android:src="@drawable/ic_group_add_24dp"
            app:srcCompat="@drawable/ic_group_add_24dp"
            fab:fab_colorNormal="@color/primary"
            fab:fab_colorPressed="@color/primary"
            fab:fab_colorRipple="@color/primary_dark"
            fab:fab_size="normal"/>

        <Button
            android:id="@+id/vuforiaCamera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|bottom"
            android:onClick="@{viewModel.onClickCamera}"
            android:text="Open Camera"/>

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar"
            android:layout_gravity="center"
            android:visibility="@{viewModel.progressVisibility}"
            />

        <TextView
            android:id="@+id/info_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@{viewModel.infoMessage}"
            android:textColor="@color/secondary_text"
            android:textSize="18sp"
            app:visibility="@{viewModel.infoMessageVisibility}"
            android:layout_gravity="center"/>

        <!--</com.github.clans.fab.FloatingActionMenu>-->
    </FrameLayout>
</layout>