<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:id="@+id/containerFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tool:background="#00ffffff">


    <com.marked.pixsee.face.CameraSourcePreview
        android:id="@+id/preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--<android.opengl.GLSurfaceView-->
        <org.rajawali3d.view.SurfaceView
            android:id="@+id/faceSurfaceView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </com.marked.pixsee.face.CameraSourcePreview>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/camera_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:fillViewport="true"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:id="@+id/bottom_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:measureWithLargestChild="false">

            <ImageButton
                android:id="@+id/favorite1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="#daffffff"
                android:maxHeight="32dp"
                android:maxWidth="32dp"
                android:src="@drawable/mlg_48"
                android:adjustViewBounds="false"
                android:cropToPadding="false"
                android:background="@drawable/round_button"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:padding="5dp" />

            <ImageButton
                android:id="@+id/favorite2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#daffffff"
                android:maxHeight="32dp"
                android:maxWidth="32dp"
                android:src="@drawable/hearts_48"
                android:layout_gravity="center"
                android:background="@drawable/round_button"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:padding="5dp" />
        </LinearLayout>
    </HorizontalScrollView>

    <ImageView
        android:id="@+id/switchCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:contentDescription="Switch camera"
        android:src="@drawable/ic_camera_rear_24dp" />

    <Button
        android:id="@+id/camera_button"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:background="@drawable/round_button"
        android:onClick="onCameraClick"
        android:backgroundTint="@color/accent_dark"
        android:backgroundTintMode="screen" />
</RelativeLayout>
