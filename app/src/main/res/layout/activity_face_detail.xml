<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fullscreenContent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.marked.pixsee.facedetail.FaceDetail">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:id="@+id/fullscreenAppBar"
        android:layout_above="@+id/linearLayout2">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/photoImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/linearLayout2"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            />

        <TextView
            android:id="@+id/pixseeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pixsee app"
            android:textColor="#ffffff"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="5dp"/>

    </RelativeLayout>

    <android.support.design.widget.AppBarLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:background="@android:color/transparent"
        app:elevation="0dp">

        <include
            layout="@layout/toolbar"/>

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/primary">

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/saveImageButton"
            android:layout_weight="1"
            android:src="@drawable/ic_save_24dp"
            android:background="#00ffffff"
            android:adjustViewBounds="true"
            android:layout_gravity="center"/>

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/sendFacebookImageButton"
            android:layout_weight="1"
            android:src="@drawable/messenger_bubble_large_white"
            android:background="#00ffffff"
            android:adjustViewBounds="true"
            android:layout_gravity="center"/>

        <ImageButton
            android:id="@+id/shareFacebookImageButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="#00ffffff"
            android:src="@drawable/com_facebook_button_icon_white"
            android:cropToPadding="true"
            android:layout_gravity="center"/>

    </LinearLayout>

</RelativeLayout>

